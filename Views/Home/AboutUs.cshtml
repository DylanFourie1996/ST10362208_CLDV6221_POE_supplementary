            align-items: center;
            justify-content: center;
            flex-direction: column;
        }

            .hero-banner .hero-text h1 {
                font-size: 50px;
                margin-bottom: 20px;
            }

            .hero-banner .hero-text p {
                font-size: 20px;
                margin-bottom: 20px;
            }

            .hero-banner .hero-text button {
                font-size: 18px;
                padding: 10px 20px;
                background-color: #f90;
