            .content-section h2 {
                font-size: 36px;
                margin-bottom: 20px;
            }

            .content-section p {
                font-size: 18px;
                margin-bottom: 20px;
            }

            .content-section img {
                max-width: 100%;
                height: auto;
                display: block;
                margin: 20px auto;
                border-radius: 8px;
            }

            .content-section button {
                font-size: 18px;
                padding: 10px 20px;
                background-color: #f90;
                border: none;
                color: white;
                cursor: pointer;
                display: inline-block;
                margin-top: 20px;
                border-radius: 4px;
                text-decoration: none;
            }

        .section-divider {
            border-bottom: 1px solid #ddd;
            margin: 40px 0;
        }

        footer {
            background-color: #f9f9f9;
            padding: 20px 0;
            margin-top: 40px;
        }

            footer a {
                color: #333;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
